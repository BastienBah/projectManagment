<div class="form">
  <%= simple_form_for @client do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="row">
      <div class="col">
        <%= f.input :name, label: 'Nom du client' %>
      </div>
      <div class="col">
        <%= f.input :email, label: 'Email' %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.input :location, label: 'Pays' %>
      </div>
      <div class="col">
        <%= f.input :phone, label: 'Numéro de téléphone' %>
      </div>
    </div>

    <div class="footer-buttons">
      <%= f.button :submit, class: "validate btn", value: "AJOUTER" %>
      <%= link_to 'ANNULER', projects_path, class: "cancel btn" %>
    </div>
<% end %>
</div>